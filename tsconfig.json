{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2019",                                
    "module": "commonjs",                           
    "esModuleInterop": true,                        
    "sourceMap": true,                            
    "outDir": "./dist",                              
    "rootDirs": ["src", "tests"],                              
    "baseUrl": "src",                             
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },    
    "resolveJsonModule": true,
  }  
}
